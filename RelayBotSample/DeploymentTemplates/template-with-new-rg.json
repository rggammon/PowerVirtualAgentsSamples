{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "groupName": {
      "type": "string",
      "metadata": {
        "description": "Specifies the name of the Resource Group."
      }
    },
    "pvaBotId": {
      "type": "string",
      "metadata": {
        "description": "Power Virtual Agent Bot Id"
      }
    },
    "pvaBotName": {
      "type": "string",
      "metadata": {
        "description": "Power Virtual Agent Bot Name"
      }
    },
    "pvaBotTenantId": {
      "type": "string",
      "metadata": {
        "description": "Power Virtual Agent Bot Tenant Id"
      }
    },
    "name": {
      "type": "string",
      "metadata": {
        "description": "Base name of the resource such as web app name and app service plan"
      },
      "minLength": 2
    },
    "webAppSku": {
      "type": "string",
      "defaultValue": "S1",
      "metadata": {
        "description": "The SKU of App Service Plan, by default is Standard S1"
      }
    },
    "speechServiceSku": {
      "type": "string",
      "defaultValue": "S0",
      "metadata": {
        "description": "The SKU of Cognitive Speech Service, by default is Standard S0"
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "Storage account type"
      },
      "maxLength": 17
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "westus",
        "westus2",
        "eastus",
        "eastus2",
        "westeurope",
        "northeurope",
        "southeastasia"
      ],
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "repoUrl": {
      "type": "string",
      "defaultValue": "https://github.com/rggammon/PowerVirtualAgentsSamples.git",
      "metadata": {
        "description": "The URL for the GitHub repository that contains the project to deploy."
      }
    },
    "branch": {
      "type": "string",
      "defaultValue": "stable",
      "metadata": {
        "description": "The branch of the GitHub repository to use."
      }
    },
    "uniquenessSuffix": {
      "type": "string",
      "defaultValue": "[take(uniqueString(deployment().name, parameters('groupName')), 7)]",
      "metadata": {
        "description": "A suffix to append to resource names, to avoid collisions with existing resources during deployment."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "name": "[parameters('groupName')]",
      "apiVersion": "2018-05-01",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "relayBotDeployment",
      "resourceGroup": "[parameters('groupName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', parameters('groupName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/rggammon/PowerVirtualAgentsSamples/stable/RelayBotSample/DeploymentTemplates/template.json"
        },
        "parameters": {
          "groupName": {
            "value": "[parameters('groupName')]"
          },
          "pvaBotId": {
            "value": "[parameters('pvaBotId')]"
          },
          "pvaBotName": {
            "value": "[parameters('pvaBotName')]"
          },
          "pvaBotTenantId": {
            "value": "[parameters('pvaBotTenantId')]"
          },
          "name": {
            "value": "[parameters('name')]"
          },
          "webAppSku": {
            "value": "[parameters('webAppSku')]"
          },
          "speechServiceSku": {
            "value": "[parameters('speechServiceSku')]"
          },
          "storageAccountType": {
            "value": "[parameters('storageAccountType')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "repoUrl": {
            "value": "[parameters('repoUrl')]"
          },
          "branch": {
            "value": "[parameters('branch')]"
          },
          "uniquenessSuffix": {
            "value": "[parameters('uniquenessSuffix')]"
          }
        }
      }
    }
  ]
}
